<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css"></head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <table class="cart__item-list">
            <% products.forEach(p=> { %>
                <tr class="cart__item">
                    <th class="cart text">
                        <%= p.productId.title %>
                    </th>
                    <th class="cart text2">Quantity:
                        <%= p.quantity %>
                    </th>
                    <th class="cart text2">$
                        <%= p.productId.price * p.quantity %>
                    </th>
                </tr>
            <% }) %>
        </table>
        <div class="centered">
            <h2>Total Price:
                <%= totalPrice %></h2>
        </div>
        <hr>
        <div class="centered">
            <form action="/create-order" method="post">
            <button type="submit" class="btn">Order Now</button>
        </form>
        </div>
    </main>
    <%- include('../includes/end.ejs') %>
</body>
